		<!-- ko foreach: ByeWeeks -->
		<span data-bind="text: WeekNumber"></span>
		<ul>
		<!-- ko foreach: Teams-->
		<li data-bind="text: TeamName"></li>
		<!-- /ko -->			
		</ul>
		<!-- /ko -->
	</div>
	<div id="tabs-8">
		@Html.Partial("DraftPickList")
	</div>
	<div id="tabs-9">
		@Html.Partial("DraftOrder")
	</div>
</div>

