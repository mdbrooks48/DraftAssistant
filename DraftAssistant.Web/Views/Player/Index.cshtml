	</div>
	<div id="tabs-3">
		@Html.Partial("PlayerList", "WR")
	</div>
	<div id="tabs-5">
		@Html.Partial("PlayerList", "K")
	</div>
	<div id="tabs-6">
		@Html.Partial("PlayerList", "DST")
	</div>
